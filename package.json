{
  "private": true,
  "name": "patiparn.dev",
  "description": "",
  "license": "",
  "scripts": {
    "build": "tailwindcss --output ./app/styles/tailwind.css --minify && remix build",
    "dev": "concurrently \"npm:dev:tailwind\" \"npm:dev:web\"",
    "dev:tailwind": "tailwindcss --output ./app/styles/tailwind.css --watch",
    "dev:web": "remix dev",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@remix-run/vercel": "^1.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/parser": "^5.4.0",
    "concurrently": "^6.4.0",
    "daisyui": "^1.16.2",
    "eslint": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "pretty-quick": "^3.1.2",
    "tailwindcss": "^3.0.0-alpha.2",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "prettier": {
    "semi": false,
    "printWidth": 200,
    "arrowParens": "always",
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
